			<h3>Humans</h3>
			<ul>
				<%= category_li 'Women' %>
				<%= category_li 'Men' %>
				<%= category_li 'Self Portraits' %>
			</ul>
		</div>

		<div class="category">
			<h3>Cities</h3>
			<ul>
